{
    "private": "true",
    "workspaces": {
        "packages": [
            "app/frontend",
            "app/backend",
            "shared"
        ],
        "nohoist": [
            "**/@henyo/shared"
        ]
    },
    "scripts": {
        "dev:frontend": "yarn workspace frontend dev",
        "dev:backend": "yarn workspace backend dev",
        "dev": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\"",
        "build": "yarn workspace backend build && yarn workspace frontend build"
    },
    "devDependencies": {
        "concurrently": "^8.0.1",
        "typescript": "^5.7.3"
    }
}